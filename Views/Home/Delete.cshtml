@{
    ViewData["Title"] = "Delete Movie";
}

@model McCordMission4Take2.Models.MovieAdd
<h2>Confirm Deleting</h2>
<h3>Are you sure you want to delete the record for @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <a asp-controller="Home" asp-action="MovieList" class="btn-dark btn-lg">Cancel</a>
    <button type="submit">Delete</button>
    <input type="hidden" asp-for="MovieID"/>
</form>



